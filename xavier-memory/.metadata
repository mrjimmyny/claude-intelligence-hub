{
  "name": "xavier-memory",
  "version": "1.1.0",
  "description": "Xavier Global Memory System - Cross-project persistent memory with cloud backup",
  "status": "production",
  "type": "infrastructure",
  "created": "2026-02-15",
  "updated": "2026-02-16",
  "author": "Xavier (Claude Code)",
  "triggers": {
    "backup": [
      "xavier, backup memory",
      "x, faz backup da memória",
      "sincroniza memória global"
    ],
    "restore": [
      "xavier, restore memory",
      "x, recupera backup"
    ],
    "status": [
      "xavier, memory status",
      "x, verifica memória"
    ]
  },
  "dependencies": {
    "rclone": ">=1.73.0",
    "gdrive-jimmy": "configured",
    "git": "required",
    "powershell": ">=5.0"
  },
  "sync_targets": {
    "google_drive": "_critical_bkp_xavier_local_persistent_memory",
    "local_projects": "all .claude/projects/*/memory/",
    "github": "mrjimmyny/claude-intelligence-hub"
  },
  "features": {
    "hard_links": true,
    "git_auto_commit": true,
    "google_drive_backup": true,
    "local_snapshots": 10
  }
}

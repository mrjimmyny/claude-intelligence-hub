{
  "name": "session-memoria",
  "version": "1.2.0",
  "description": "Jimmy's second brain - captures and recalls conversations, decisions, insights, and ideas across all sessions with 3-tier archiving",
  "status": "production",
  "author": "Xavier (Claude)",
  "created": "2026-02-10",
  "last_updated": "2026-02-14",
  "type": "knowledge-management",
  "auto_load": true,
  "triggers": {
    "save": [
      "xavier, registre isso",
      "x, salve essa conversa",
      "registre isso",
      "salvar essa decisão",
      "guarde essa informação"
    ],
    "search": [
      "xavier, já falamos sobre",
      "x, busca tema",
      "procure na memoria",
      "procure na memoria --deep",
      "procure em todo o histórico",
      "busca --full",
      "recall",
      "o que já conversamos sobre"
    ],
    "update": [
      "xavier, marca como resolvido",
      "x, fecha o tema",
      "atualiza o status de",
      "marca esse assunto como",
      "resolve o entry",
      "xavier, atualiza o desfecho"
    ],
    "recap": [
      "xavier, resume os últimos registros",
      "x, resume os últimos",
      "quais assuntos registramos",
      "o que temos em aberto na memoria",
      "recap session-memoria",
      "x, quais temas estão abertos",
      "resume a session-memoria",
      "o que ainda falta discutir"
    ]
  },
  "settings": {
    "auto_push": true,
    "default_language": "pt-BR",
    "max_tags": 5,
    "valid_statuses": ["aberto", "em_discussao", "resolvido", "arquivado"],
    "valid_priorities": ["alta", "media", "baixa"],
    "default_status": "aberto",
    "default_priority": "media",
    "alert_thresholds": {
      "warning": 500,
      "critical": 1000
    }
  }
}
